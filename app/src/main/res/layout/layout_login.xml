<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF9c4"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Silakan login terlebih dahulu"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Nama Pengguna: "
        android:textSize="8pt"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/etUsername"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Pengguna">

    </EditText>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Kata Sandi: "
        android:textSize="8pt"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/etKataSandi"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kata Sandi">

    </EditText>

    <CheckBox
        android:id="@+id/cbRememberMe"
        android:text="Ingat saya"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </CheckBox>

    <Button
        android:id="@+id/btnLogin"
        android:text="login"
        android:textSize="17dp"
        android:backgroundTint="#2196F3"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <TextView
        android:id="@+id/tvLupaSandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Lupa kata sandi Anda? "
        android:textSize="6pt"
        android:textColor="#0000FF"
        android:textAlignment="center">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="Belum punya akun?"
            android:textSize="6pt">

        </TextView>

        <TextView
            android:id="@+id/tvDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="Daftar sekarang. "
            android:textColor="#0000FF"
            android:textSize="6pt">

        </TextView>


    </LinearLayout>


</LinearLayout>